@model IEnumerable<FitnessCenterManagement.Models.AIRecommendation>

@{
    ViewData["Title"] = "Tüm AI Önerileri";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        
        <h2 style="color: #C57287;"><i class="bi bi-robot"></i> Tüm AI Önerileri <small class="text-muted">(Admin)</small></h2>

        
        <a asp-controller="Home" asp-action="Index" class="btn text-white shadow-sm" style="background-color: #006666; border-radius: 10px;">
            <i class="bi bi-house-door"></i> Ana Sayfaya Dön
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm" style="border-radius: 20px; overflow: hidden;">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                   
                    <thead style="background-color: #fcf8f9;">
                        <tr>
                            <th class="border-0">Tarih</th>
                            <th class="border-0">Kullanıcı ID</th>
                            <th class="border-0">Yaş</th>
                            <th class="border-0">Boy/Kilo</th>
                            <th class="border-0">Hedef</th>
                            <th class="border-0">Seviye</th>
                            <th class="border-0 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle small">@item.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="align-middle"><code class="text-muted">@item.UserId.Substring(0, 8)...</code></td>
                                <td class="align-middle">@item.Age</td>
                                <td class="align-middle">@item.Height cm / @item.Weight kg</td>
                                <td class="align-middle"><span class="badge" style="background-color: #C57287;">@item.Goal</span></td>
                                <td class="align-middle">@item.ExperienceLevel</td>
                                <td class="text-end align-middle">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" style="border-radius: 8px;">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" style="border-radius: 8px;">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert text-center p-5" style="background-color: #f0f7f7; border-radius: 20px; border: 1px dashed #006666;">
            <i class="bi bi-info-circle" style="font-size: 2rem; color: #006666;"></i>
            <p class="mt-2 mb-0">Henüz hiç AI önerisi oluşturulmamış.</p>
        </div>
    }
</div>