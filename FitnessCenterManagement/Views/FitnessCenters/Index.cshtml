@*View a gelecek olan spor salon listesi bu  *@
@model IEnumerable<FitnessCenterManagement.Models.FitnessCenter>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Spor Salonları Listesi</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-house-door"></i> Ana Sayfaya Dön
        </a>
    </div>
    <!-- bootstrap ile tasarim bicimlendirme -->

    <!-- Yeni salon ekle butonu - Sadece Admin -->
    @if (User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Yeni Salon Ekle</a>
        </p>
    }

    <!-- Salonları listeleyen tablo -->
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Salon Adı</th>
                <th>Adres</th>
                <th>Telefon</th>
                <th>Açılış Saati</th>
                <th>Kapanış Saati</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @* Her salon için bir satır oluştur *@
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.OpeningTime</td>
                    <td>@item.ClosingTime</td>
                    <td>
                        <!-- İşlem butonları -->
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>