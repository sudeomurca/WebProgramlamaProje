@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5" style="background-color: #4A90E2; min-height: 400px; display: flex; align-items: center; border-radius: 10px; margin-bottom: 40px;">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">Fitness Center Yönetim Sistemi</h1>
        <p class="lead mb-4">Spor salonunuzu dijitalleştirin! Antrenör yönetimi, randevu sistemi ve yapay zeka destekli öneriler.</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Appointment" asp-action="Create" class="btn btn-light btn-lg px-5">
                Randevu Al
            </a>
            <a asp-controller="FitnessCenters" asp-action="Index" class="btn btn-outline-light btn-lg px-5">
                Salonları Gör
            </a>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <h2 class="text-center mb-5 fw-bold">Özelliklerimiz</h2>
    
    <div class="row g-4">
        <!-- Feature 1 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-building fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">Spor Salonu Yönetimi</h4>
                    <p class="card-text text-muted">Çoklu spor salonu desteği, çalışma saatleri ve hizmet yönetimi.</p>
                    <a asp-controller="FitnessCenters" asp-action="Index" class="btn btn-outline-primary">Salonlar →</a>
                </div>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-person-badge fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">Antrenör Takibi</h4>
                    <p class="card-text text-muted">Antrenör uzmanlık alanları ve müsaitlik saatleri yönetimi.</p>
                    <a asp-controller="Trainer" asp-action="Index" class="btn btn-outline-success">Antrenörler →</a>
                </div>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-calendar-check fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">Akıllı Randevu</h4>
                    <p class="card-text text-muted">Çakışma kontrolü, otomatik müsaitlik tespiti ve onay sistemi.</p>
                    <a asp-controller="Appointment" asp-action="Index" class="btn btn-outline-warning">Randevular →</a>
                </div>
            </div>
        </div>

        <!-- Feature 4 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-list-check fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">Hizmetler</h4>
                    <p class="card-text text-muted">Farklı hizmet türleri, ücretler ve süre tanımlaması.</p>
                    <a asp-controller="Service" asp-action="Index" class="btn btn-outline-info">Hizmetler →</a>
                </div>
            </div>
        </div>

        <!-- Feature 5 -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-danger bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-robot fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">AI Önerileri</h4>
                    <p class="card-text text-muted">Yapay zeka destekli kişiselleştirilmiş egzersiz önerileri.</p>
                    <a href="#" class="btn btn-outline-danger">Yakında →</a>
                </div>
            </div>
        </div>

        <!-- Feature 6 - REST API -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-dark bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="bi bi-code-square fs-1"></i>
                    </div>
                    <h4 class="card-title mb-3">REST API</h4>
                    <p class="card-text text-muted">LINQ sorguları ile güçlü API endpoint'leri - test edin!</p>
                    <a asp-controller="Home" asp-action="ApiTest" class="btn btn-outline-dark">API Test →</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-5 mb-5 rounded">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-primary">@ViewBag.TotalCenters</h2>
                    <p class="text-muted">Spor Salonu</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-success">@ViewBag.TotalTrainers</h2>
                    <p class="text-muted">Antrenör</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-warning">@ViewBag.TotalServices</h2>
                    <p class="text-muted">Hizmet</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-info">@ViewBag.TotalAppointments</h2>
                    <p class="text-muted">Randevu</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

        .feature-icon {
            font-size: 2rem;
        }

        .stat-card h2 {
            margin-bottom: 0;
        }
    </style>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
