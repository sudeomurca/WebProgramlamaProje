@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="text-white shadow-lg text-center"
     style="background: linear-gradient(135deg, #006666 0%, #00a3a3 100%) !important;
            padding-top: 6rem !important;
            padding-bottom: 6rem !important;
            border-radius: 40px !important;
            margin-bottom: 3rem !important;
            width: 95%;
            margin-left: auto;
            margin-right: auto;
            border: 1px solid rgba(255,255,255,0.2);">

    <h1 class="display-3 fw-bold" style="text-shadow: 2px 4px 12px rgba(0,0,0,0.15);">
        Fitness Center Yönetim Sistemi
    </h1>
</div>

<!-- Features Section -->
<div class="row g-4">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 80px; height: 80px; background-color: #A7F502; color: white !important;">
                    <i class="bi bi-building fs-1"></i>
                </div>
                <h4 class="card-title mb-3">Spor Salonu Yönetimi</h4>
                <a asp-controller="FitnessCenters" asp-action="Index" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#A7F502'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#A7F502';"
                   style="border: 1px solid #A7F502; color: #A7F502; transition: 0.3s;">Salonlar →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 80px; height: 80px; background-color: #F49FFA; color: white !important;">
                    <i class="bi bi-person-badge fs-1"></i>
                </div>
                <h4 class="card-title mb-3">Antrenör Takibi</h4>
                <a asp-controller="Trainer" asp-action="Index" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#F49FFA'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#F49FFA';"
                   style="border: 1px solid #F49FFA; color: #F49FFA; transition: 0.3s;">Antrenörler →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-calendar-check fs-1"></i>
                </div>
                <h4 class="card-title mb-3">Akıllı Randevu</h4>
                <a asp-controller="Appointment" asp-action="Index" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#ffc107'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#ffc107';"
                   style="border: 1px solid #ffc107; color: #ffc107; transition: 0.3s;">Randevular →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                    <i class="bi bi-list-check fs-1"></i>
                </div>
                <h4 class="card-title mb-3">Hizmetler</h4>
                <a asp-controller="Service" asp-action="Index" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#0dcaf0'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#0dcaf0';"
                   style="border: 1px solid #0dcaf0; color: #0dcaf0; transition: 0.3s;">Hizmetler →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 80px; height: 80px; background-color: #C57287; color: white !important;">
                    <i class="bi bi-robot fs-1"></i>
                </div>
                <h4 class="card-title mb-3">AI Önerileri</h4>
                <a asp-controller="AIRecommendations" asp-action="MyRecommendations" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#C57287'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#C57287';"
                   style="border: 1px solid #C57287; color: #C57287; transition: 0.3s;">AI Önerileri →</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0 hover-card">
            <div class="card-body text-center p-4">
                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                     style="width: 80px; height: 80px; background-color: #675889; color: white !important;">
                    <i class="bi bi-code-square fs-1"></i>
                </div>
                <h4 class="card-title mb-3">REST API</h4>
                <a asp-controller="Home" asp-action="ApiTest" class="btn w-100"
                   onmouseover="this.style.backgroundColor='#675889'; this.style.color='white';"
                   onmouseout="this.style.backgroundColor='transparent'; this.style.color='#675889';"
                   style="border: 1px solid #675889; color: #675889; transition: 0.3s;">API Test →</a>
            </div>
        </div>
    </div>
</div>
<!-- Stats Section -->
<div class="bg-light py-5 mb-5 rounded">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-primary">@ViewBag.TotalCenters</h2>
                    <p class="text-muted">Spor Salonu</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-success">@ViewBag.TotalTrainers</h2>
                    <p class="text-muted">Antrenör</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-warning">@ViewBag.TotalServices</h2>
                    <p class="text-muted">Hizmet</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <h2 class="display-4 fw-bold text-info">@ViewBag.TotalAppointments</h2>
                    <p class="text-muted">Randevu</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

        .feature-icon {
            font-size: 2rem;
        }

        .stat-card h2 {
            margin-bottom: 0;
        }
    </style>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
