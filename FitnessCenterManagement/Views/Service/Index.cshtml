@model IEnumerable<FitnessCenterManagement.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<h1>Hizmetler</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Hizmet Ekle</a>
    </p>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hizmet Adı</th>
            <th>Açıklama</th>
            <th>Süre (dk)</th>
            <th>Ücret (₺)</th>
            <th>Spor Salonu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.ServiceType.GetDisplayName()</td>
                <td>@service.Description</td>
                <td>@service.DurationMinutes</td>
                <td>@service.Price.ToString("C2")</td>
                <td>@service.FitnessCenter!.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-info">Details</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>