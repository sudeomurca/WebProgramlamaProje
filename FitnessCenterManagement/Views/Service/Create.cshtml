@model FitnessCenterManagement.Models.Service

@{
    ViewData["Title"] = "Yeni Hizmet Ekle";
}

<h1>Yeni Hizmet Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="ServiceType" class="form-label">Hizmet Tipi</label>
                <select asp-for="ServiceType" class="form-control" asp-items="Html.GetEnumSelectList<ServiceType>()">
                    <option value="">-- Hizmet Tipi Seçin --</option>
                </select>
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DurationMinutes" class="form-label">Süre (Dakika)</label>
                <input asp-for="DurationMinutes" class="form-control" type="number" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Ücret (₺)</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FitnessCenterId" class="form-label">Spor Salonu</label>
                <select asp-for="FitnessCenterId" class="form-control">
                    <option value="">-- Spor Salonu Seçin --</option>
                    @foreach (var center in ViewBag.FitnessCenters)
                    {
                        <option value="@center.Id">@center.Name</option>
                    }
                </select>
                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}