@model FitnessCenterManagement.Models.Trainer

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}


<h1>Yeni Antrenör Ekle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Ad</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyad</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Specialization" class="form-label">Uzmanlık Alanı</label>
                <select asp-for="Specialization" class="form-control" asp-items="Html.GetEnumSelectList<SpecializationType>()">
                    <option value="">-- Uzmanlık Alanı Seçin --</option>
                </select>
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FitnessCenterId" class="form-label">Spor Salonu</label>
                <select asp-for="FitnessCenterId" class="form-control">
                    <option value="">-- Spor Salonu Seçin --</option>
                    @foreach (var center in ViewBag.FitnessCenters)
                    {
                        <option value="@center.Id">@center.Name</option>
                    }
                </select>
                <span asp-validation-for="FitnessCenterId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}