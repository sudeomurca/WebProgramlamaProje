@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Randevu Sil";
}

<h1>Randevu Sil</h1>

<h3>Bu randevuyu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Randevu Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Kullanıcı ID
        </dt>
        <dd class="col-sm-9">
            @Model.UserId
        </dd>

        <dt class="col-sm-3">
            Antrenör
        </dt>
        <dd class="col-sm-9">
            @Model.Trainer!.FirstName @Model.Trainer.LastName
        </dd>

        <dt class="col-sm-3">
            Hizmet
        </dt>
        <dd class="col-sm-9">
            @Model.Service!.ServiceType.GetDisplayName()
        </dd>

        <dt class="col-sm-3">
            Randevu Tarihi ve Saati
        </dt>
        <dd class="col-sm-9">
            @Model.AppointmentDate.ToString("dd.MM.yyyy HH:mm")
        </dd>

        <dt class="col-sm-3">
            Durum
        </dt>
        <dd class="col-sm-9">
            @if (Model.Status == "Bekliyor")
            {
                <span class="badge bg-warning">@Model.Status</span>
            }
            else if (Model.Status == "Onaylandı")
            {
                <span class="badge bg-success">@Model.Status</span>
            }
            else if (Model.Status == "Reddedildi")
            {
                <span class="badge bg-danger">@Model.Status</span>
            }
            else
            {
                <span class="badge bg-secondary">@Model.Status</span>
            }
        </dd>

        <dt class="col-sm-3">
            Oluşturulma Tarihi
        </dt>
        <dd class="col-sm-9">
            @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
        </dd>
    </dl>

    <!-- Silme formu -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>