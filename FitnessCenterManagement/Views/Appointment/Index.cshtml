@model IEnumerable<FitnessCenterManagement.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Randevular</h1>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-house-door"></i> Ana Sayfaya Dön
    </a>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Randevu Oluştur</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Randevu Tarihi</th>
            <th>Durum</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Yönetim</th>
            }
        </tr>
    </thead>
    <tbody>
        @{
            var viewModels = ViewBag.AppointmentViewModels as List<dynamic>;
            var index = 0;
        }
        @foreach (var item in viewModels)
        {
            var appointment = item.Appointment as FitnessCenterManagement.Models.Appointment;
            <tr>
                <td>
                    @item.UserFullName<br />
                    <small class="text-muted">@appointment.UserId</small>
                </td>
                <td>@appointment.Trainer!.FirstName @appointment.Trainer.LastName</td>
                <td>@appointment.Service!.ServiceType.GetDisplayName()</td>
                <td>@appointment.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    @if (appointment.Status == "Bekliyor")
                    {
                        <span class="badge bg-warning">@appointment.Status</span>
                    }
                    else if (appointment.Status == "Onaylandı")
                    {
                        <span class="badge bg-success">@appointment.Status</span>
                    }
                    else if (appointment.Status == "Reddedildi")
                    {
                        <span class="badge bg-danger">@appointment.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@appointment.Status</span>
                    }
                </td>
                <td>@appointment.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.Id" class="btn btn-sm btn-info">Detay</a>
                    
                    @* Uye kendi randevusunu duzenleyebilir (Bekliyor durumunda ise) *@
                    @if (User.IsInRole("Admin") || (appointment.UserId == User.Identity.Name && appointment.Status == "Bekliyor"))
                    {
                        <a asp-action="Edit" asp-route-id="@appointment.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    }
                    
                    <a asp-action="Delete" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @if (appointment.Status == "Bekliyor")
                        {
                            <a asp-action="Approve" asp-route-id="@appointment.Id" class="btn btn-sm btn-success">Onayla</a>
                            <a asp-action="Reject" asp-route-id="@appointment.Id" class="btn btn-sm btn-danger">Reddet</a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>